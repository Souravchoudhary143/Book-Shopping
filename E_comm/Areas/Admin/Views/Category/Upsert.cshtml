@model E_comm_Models.Models.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id == 0 ? "Edit Category" : "New Category";
    var saveUpdate = Model.Id != 0 ? "Update" : "Save";
}
<form method="post">
    <div class="row">
        <div class="col-10 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group row m-2 p-2 offset-4">
            <div class=" col-4 offset-4">
                <button type="submit" class=" btn btn-info form-control">
                    @saveUpdate
                </button>
            </div>
            <div class=" col-4">
                <a asp-action="Index" class=" btn btn-success form-control ">
                    Back To List
                </a>
            </div>
        </div>
</form>
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
